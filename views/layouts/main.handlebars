<html lang='en'>

  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Tech Blog</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9'
      crossorigin='anonymous'
    />
   
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
  </head>

  <body>
    <header>

      <div class='d-flex justify-content-between'>

        <h1 class='heading mt-2 mb-2'>The Tech Blog</h1>
      <div class='d-flex justify-content-between align-self-center'>
        <nav class='w-100 text-end d-inline me-3'>

          <a href='/'>Home</a>
         
           <a href="/dashboard" class="ps-0">Dashboard</a>
          {{#if loggedIn}}
            <button id='logout' class='btn-no-style ms-0'>Logout</button>
          {{else}}
            <a class='px-0' href='/login'>Login</a>
           
          {{/if}}
        </nav>

      </div>
    </header>

    <main>
      <div class='blog'>
        {{{body}}}
      </div>
    </main>
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>