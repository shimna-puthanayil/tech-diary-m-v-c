<div class='row justify-content-center'>
  <div class='login-card'>
    <h2 class='page-title px-3 mt-2'>Edit Post</h2>
    <form class='form login-form px-3'>
      <div class='form-group'>
        <label for='title'>Title</label>
        <textarea
          id='title'
          name='ingredients'
          class='form-input'
          rows='1'
          cols='80'
        >{{post.title}}</textarea>
      </div>
      <div class='form-group'>
        <label for='description'>Description</label>
        <textarea
          id='description'
          name='ingredients'
          class='form-input'
          rows='10'
          cols='80'
        >{{post.description}}</textarea>
      </div>
      <div class='form-group'>
        <button
          id='update-post'
          class='btn btn-primary rounded-pill px-4 py-0 mt-1'
          type='submit'
        >Update</button>
        <div class='form-group'>
          <button
            id='delete-post'
            class='btn btn-primary rounded-pill px-4 py-0 mt-1'
            type='submit'
          >Delete</button>
        </div>
      </div>
    </form>
  </div>

</div>
<script src='/js/editPost.js'></script>