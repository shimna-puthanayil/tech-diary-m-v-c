<div class='row justify-content-center px-3 mt-0'>
  {{! ============================ Login============================ }}
  <div class='login-card p-0'>
    <header class='p-0'><h4
        class='page-title mt-0 px-4 py-2'
      >Login</h4></header>
    {{! <h2 class='page-title px-3 mt-2'>Login</h2> }}
    <form class='form login-form px-3'>
      <div class='form-group'>
        <label for='email-login'>Email:</label>
        <input class='form-input' type='text' id='email-login' />
      </div>
      <div class='form-group'>
        <label for='password-login'>Password:</label>
        <input class='form-input' type='password' id='password-login' />
      </div>
      <div class='form-group'>
        <button
          class='btn btn-primary rounded-pill px-4 py-0 mt-1'
          type='submit'
        >login</button>
      </div>
    </form>
  </div>
  {{! ============================Sign up ============================ }}
  <div class='signup-card p-0'>
    <header class='p-0'><h4 class='page-title mt-0 px-4 py-2'>Sign Up</h4></header>
    <form class='form signup-form px-3'>
      <div class='form-group'>
        <label for='username-signup'>Username:</label>
        <input class='form-input' type='text' id='username-signup' />
      </div>
      <div class='form-group'>
        <label for='email-signup'>Email:</label>
        <input class='form-input' type='text' id='email-signup' />
      </div>
      <div class='form-group'>
        <label for='password-signup'>Password:</label>
        <input class='form-input' type='password' id='password-signup' />
      </div>
      <div class='form-group'>
        <button
          class='btn btn-primary rounded-pill px-4 py-0 mt-1'
          type='submit'
        >signup</button>
      </div>
    </form>
  </div>
</div>

<script src='/js/login.js'></script>