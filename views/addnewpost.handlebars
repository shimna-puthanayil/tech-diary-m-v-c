<div class='row justify-content-center'>
  <div class='login-card'>
    <h2 class='page-title px-3 mt-2'>Add New Post</h2>
    <form class='form login-form px-3'>
      <div class='form-group'>
        <label for='email-login'>Title</label>
        <input class='form-input' type='text' id='email-login' />
      </div>
      <div class='form-group'>
        <label for='password-login'>Description</label>
        <input
          id='text-comment'
          class='form-input'
          type='password'
          id='password-login'
        />
      </div>
      <div class='form-group'>
        <button
          class='btn btn-primary rounded-pill px-4 py-0 mt-1'
          type='submit'
        >Save</button>
      </div>
    </form>
  </div>

</div>

